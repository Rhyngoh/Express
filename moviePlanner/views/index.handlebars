<div class="container">
<h1>Movie Planner</h1>

<ul>
  {{#each movies}}
    <li>
      <p>
        {{this.id}}. {{this.movie}}

        <form action="/delete?_method=DELETE" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">Delete Plan!</button>
        </form>
      </p>
    </li>
  {{/each}}
</ul>

<h2>Create a Plan</h2>
<form method="POST" action="/create" class="btn-lg">
	<textarea type="text" name="movie"></textarea>
	<button type="submit">Save Plan!</button>
</form>

<h2>Update a Plan</h2>
<form action="/update?_method=PUT" method="POST" class="btn-lg">
  <input type="text" name="id" placeholder="id">
	<textarea type="text" name="movie" placeholder="movie"></textarea>
	<button type="submit">Update Plan!</button>
</form>
</div>